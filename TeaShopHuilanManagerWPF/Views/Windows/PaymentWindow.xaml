<Window x:Class="TeaShopHuilanManagerWPF.Views.Windows.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeaShopHuilanManagerWPF.Views.Windows"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <Button Content="Наличными" Style="{StaticResource Button}" Click="CashPayment"/>
        <Button Content="Картой" Style="{StaticResource Button}" Click="CardPayment" />
        <Button Content="Баллами" Style="{StaticResource Button}" Click="BonusesPayment"/>
    </StackPanel>
</Window>

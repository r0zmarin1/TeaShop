<Page x:Class="TeaShopHuilanManagerWPF.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeaShopHuilanManagerWPF.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <StackPanel>
        <Label Content="Добро пожаловать"/>
        <Label Content="Пин-код"/>
        <TextBox Text="{Binding User.Password}"/>
        <Button Content="Войти"/> 
    </StackPanel>
</Page>
